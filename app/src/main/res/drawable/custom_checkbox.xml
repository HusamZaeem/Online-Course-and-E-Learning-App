<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Inner fill color for checked -->
            <stroke android:width="2dp" android:color="@color/btn_color" /> <!-- Stroke for checked -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Unchecked State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Inner fill color for unchecked -->
            <stroke android:width="2dp" android:color="@color/btn_color" /> <!-- Stroke for unchecked -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>