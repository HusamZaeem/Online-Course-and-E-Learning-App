<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:padding="16dp">


    <FrameLayout
        android:id="@+id/fl_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:clipChildren="false"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvStudentPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="60dp"
            android:elevation="6dp">

            <ImageView
                android:id="@+id/iv_profile_student_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/head_icon"
                android:contentDescription="@string/student_profile" />
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/iv_edit_photo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_camera"
            android:elevation="8dp"
            android:contentDescription="@string/edit_photo"
            android:layout_gravity="bottom|end"/>
    </FrameLayout>



    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:background="@drawable/et_bg"
        android:hint="First Name"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/fl_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="@drawable/et_bg"
        android:hint="Last Name"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/et_first_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="@drawable/et_bg"
        android:hint="Email"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/et_last_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password Field -->
    <EditText
        android:id="@+id/et_student_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="@drawable/et_bg"
        android:hint="Password"
        android:enabled="false"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="@drawable/et_bg"
        android:hint="Phone"
        android:enabled="false"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/et_student_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/btn_edit_save"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/btn_color"
        android:textColor="@color/btn_text_color"
        android:textSize="18sp"
        android:text="Edit Personal Information"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
