<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_mentor_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.cardview.widget.CardView
                android:id="@+id/cv_mentor_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="6dp"
                android:elevation="0dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_mentor_photo_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/tv_top_mentors"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/head_icon" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_mentor_full_name_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/tv_mentor_name"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cv_mentor_photo"
                />


            <TextView
                android:id="@+id/tv_mentor_job_title_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="@string/tv_mentor_job_title"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_mentor_full_name_search"
                app:layout_constraintStart_toEndOf="@+id/cv_mentor_photo"
                />


            <ImageView
                android:id="@+id/iv_course_mentor_chat_search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="20dp"
                android:contentDescription="@string/tv_top_mentors"
                android:scaleType="centerCrop"
                android:src="@drawable/chat_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>







    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>